<%= link_to 'Back', topic_path(@topic.id), :class => 'btn btn-success' %><br /><br />
<div class="col-sm-12 show-topic">
  <h2 class="col-sm-10 col-sm-offset-3">Create a new comment</h2><br />
    <%= form_for(:comment, :url => {:action => 'create'},
                 :html => {:id => 'edit-topic-form', :class => 'form-horizontal col-sm-6 col-sm-offset-2'}) do |f| %>

        <input type="hidden" name="topic_id" id="topic_id" value="<%= @topic.id %>" />
        <div class="form-group">
          <%= f.label :name, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :name, class: 'form-control', placeholder: 'Name'  %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :content, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_area :content, class: 'form-control', size: '24x6', placeholder: 'Write about the topics here...'  %>
          </div>
        </div>

        <div class="form-group">
          <%= submit_tag("Submit", :class => 'col-sm-offset-5 btn btn-primary') %>
        </div>
    <% end %>
</div>
