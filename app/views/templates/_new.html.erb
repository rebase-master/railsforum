<script type="text/template" id="topics-new-tmpl">
    <h2 class="col-sm-10 col-sm-offset-3">Create a new topic</h2><br />
    <%=
        #form_tag(remote: true, :authenticity_token => true,
        #         :html => {:id => 'edit-topic-form',
        #         :class => 'form-horizontal col-sm-6 col-sm-offset-2'}) do
        form_tag(topics_path, remote: true, :id => 'edit-topic-form',
                 :authenticity_token => true,
                 :class => 'form-horizontal col-sm-6 col-sm-offset-2') do
    %>

        <div class="form-group">
          <%= label_tag :name, nil, class: 'col-sm-2 control-label'  %>
          <div class="col-sm-10">
            <%= text_field_tag :name, nil, class: 'form-control', placeholder: 'Name'  %>
          </div>
        </div>
        <div class="form-group">
          <%= label_tag :title, nil, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= text_field_tag :title, nil, class: 'form-control', placeholder: 'Title'  %>
          </div>
        </div>
        <div class="form-group">
          <%= label_tag :content, nil, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= text_area_tag :content, nil, class: 'form-control', size: '24x6', placeholder: 'Write about the topics here...'  %>
          </div>
        </div>

        <div class="form-group">
          <%= submit_tag("Create Topic", :class => 'col-sm-offset-5 btn btn-primary') %>
        </div>
    <% end %>
</script>