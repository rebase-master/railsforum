<h2 class="col-sm-10 col-sm-offset-3">Create a new topic</h2><br />
<%= form_for(:topic, :url => {:action => 'create'},
             :html => {:id => 'edit-topic-form', :class => 'form-horizontal col-sm-6 col-sm-offset-2'}) do |f| %>

    <div class="form-group">
      <%= f.label :name, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Name'  %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :title, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :title, class: 'form-control', placeholder: 'Title'  %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :content, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :content, class: 'form-control', size: '24x6', placeholder: 'Write about the topics here...'  %>
      </div>
    </div>

    <div class="form-group">
      <%= submit_tag("Create Topic", :class => 'col-sm-offset-5 btn btn-primary') %>
    </div>
<% end %>
